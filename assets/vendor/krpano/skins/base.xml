<!-- Modal -->
<style name="hotspot_style_modal" onclick="modal_action" url="../viewer/skin/images/modal.png" scale="0.8" onover.mouse="" onout.mouse=""/>
<action name="modal_action">
    set(modal, get(modal_text));
    if(webvr.isenabled,
    set(layer[overlay].visible, false);
    ,
    if(modal != '',
      set(layer[overlay].visible, true);
      set(layer[text_popup].html, get(modal_text));
    );
      if(modal == null,
        set(layer[overlay].visible, true);
      );
    );
</action>
